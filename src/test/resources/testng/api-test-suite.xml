<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Automation Test Suite" verbose="1" parallel="methods" thread-count="3">
    <parameter name="suiteOwner" value="api-automation"/>
    <parameter name="env" value="DEMO"/>

    <test name="Annotation-Based API Tests">
        <classes>
            <class name="com.solvd.automation.tests.annotation.GetUsersTest"/>
            <class name="com.solvd.automation.tests.annotation.GetUserByIdTest"/>
            <class name="com.solvd.automation.tests.annotation.PostUserTest"/>
            <class name="com.solvd.automation.tests.annotation.PutUserTest"/>
            <class name="com.solvd.automation.tests.annotation.DeleteUserTest"/>
        </classes>
    </test>

    <test name="Declarative API Tests">
        <classes>
            <class name="com.solvd.automation.tests.declarative.DeclarativeGetUsersTest"/>
            <class name="com.solvd.automation.tests.declarative.DeclarativeGetUserByIdTest"/>
            <class name="com.solvd.automation.tests.declarative.DeclarativePostUserTest"/>
            <class name="com.solvd.automation.tests.declarative.DeclarativePutUserTest"/>
            <class name="com.solvd.automation.tests.declarative.DeclarativePatchUserTest"/>
            <class name="com.solvd.automation.tests.declarative.DeclarativeDeleteUserTest"/>
        </classes>
    </test>

    <test name="Rest Assured API Tests">
        <classes>
            <class name="com.solvd.automation.tests.restassured.RestAssuredGetUsersTest"/>
            <class name="com.solvd.automation.tests.restassured.RestAssuredPostUserTest"/>
            <class name="com.solvd.automation.tests.restassured.RestAssuredPutUserTest"/>
            <class name="com.solvd.automation.tests.restassured.RestAssuredPatchUserTest"/>
            <class name="com.solvd.automation.tests.restassured.RestAssuredDeleteUserTest"/>
        </classes>
    </test>
</suite>

