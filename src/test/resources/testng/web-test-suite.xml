<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Web UI Automation Test Suite" verbose="1" parallel="methods" thread-count="3">
    <parameter name="suiteOwner" value="ui-automation"/>
    <parameter name="env" value="DEMO"/>

    <test name="HomePage Load Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.HomePageLoadTest"/>
        </classes>
    </test>

    <test name="Navigation Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.MacNavigationTest"/>
        </classes>
    </test>

    <test name="Scroll and Visibility Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.ScrollAndVisibilityTest"/>
        </classes>
    </test>

    <test name="Multiple Elements Interaction Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.MultipleElementsInteractionTest"/>
        </classes>
    </test>

    <test name="Header Elements Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.HeaderElementsTest"/>
        </classes>
    </test>

    <test name="Footer Elements Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.FooterElementsTest"/>
        </classes>
    </test>

    <test name="Featured Products Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.FeaturedProductsTest"/>
        </classes>
    </test>

    <test name="Multi-Page Navigation Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.MultiPageNavigationTest"/>
        </classes>
    </test>

    <test name="Interactive Elements Tests">
        <classes>
            <class name="com.solvd.automation.tests.web.InteractiveElementsTest"/>
        </classes>
    </test>

</suite>

